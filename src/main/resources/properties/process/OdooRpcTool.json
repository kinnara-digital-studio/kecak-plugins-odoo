[
  {
    "title": "Odoo RPC Tool",
    "properties": [
      {
        "name": "model",
        "type": "textfield",
        "label": "Model",
        "required": "true"
      },
      {
        "name": "method",
        "type": "selectbox",
        "required": "true",
        "label": "Method",
        "options": [
          {
            "value": "read",
            "label": "Read"
          },
          {
            "value": "write",
            "label": "Write"
          },
          {
            "value": "create",
            "label": "Create"
          },
          {
            "value": "unlink",
            "label": "Delete"
          },
          {
            "value": "messagePost",
            "label": "Message"
          }
        ]
      },
      {
        "name": "recordId",
        "type": "textfield",
        "label": "Record ID",
        "required": "true",
        "control_field": "method",
        "control_value": "read|write|unlink|messagePost",
        "control_use_regex": "true"
      },
      {
        "name": "record",
        "type": "grid",
        "label": "Record",
        "control_field": "method",
        "control_value": "create|write",
        "control_use_regex": "true",
        "columns": [
          {
            "key": "field",
            "label": "Field",
            "required": "true"
          },
          {
            "key": "dataType",
            "label": "Data Type",
            "required": "true",
            "options": [
              {
                "value": "string",
                "label": "String"
              },
              {
                "value": "integer",
                "label": "Integer"
              },
              {
                "value": "float",
                "label": "Float"
              },
              {
                "value": "boolean",
                "label": "Boolean"
              }
            ]
          },
          {
            "key": "value",
            "label": "Value",
            "required": "true"
          }
        ]
      },
      {
        "name": "messagePost",
        "type": "textarea",
        "label": "Message Post",
        "description": "Send message to current record using Odoo message_post XmlRpc",
        "control_field": "method",
        "control_value": "messagePost"
      }
    ]
  },
  {
    "title": "Result",
    "properties": [
      {
        "type": "header",
        "label": "Process"
      },
      {
        "name": "resultWfVariable",
        "type": "textfield",
        "label": "Workflow Variable",
        "control_field": "method",
        "control_value": "create|write",
        "control_use_regex": "true"
      },
      {
        "name": "resultRecord",
        "type": "grid",
        "label": "Record",
        "control_field": "method",
        "control_value": "read",
        "columns": [
          {
            "key": "field",
            "label": "Field",
            "required": "true"
          },
          {
            "key": "wfVariable",
            "label": "Workflow Variable",
            "required": "true"
          }
        ]
      },
      {
        "type": "header",
        "label": "Store in Form",
        "control_field": "method",
        "control_value": "read"
      },
      {
        "name": "resultFormDefId",
        "label": "Form",
        "type": "selectbox",
        "options_ajax": "[CONTEXT_PATH]/web/json/console/app[APP_PATH]/forms/options",
        "url": "[CONTEXT_PATH]/web/property/json[APP_PATH]/getPropertyOptions",
        "control_field": "method",
        "control_value": "read"
      }
    ]
  },
  {
    "title": "Advanced",
    "properties": [
      {
        "name": "delay",
        "type": "textfield",
        "label": "Delay execution (in seconds)",
        "regex_validation": "^[0-9]*$|^#[^#]+#$",
        "description": "Delayed execution will be executed in secondary thread, so the process will continue without waiting for the result."
      },
      {
        "name": "postSuccessMessage",
        "type": "textfield",
        "label": "Send message when success",
        "description": "Send message to current record using Odoo message_post XmlRpc when success"
      },
      {
        "name": "postErrorMessage",
        "type": "textfield",
        "label": "Send message when error",
        "description": "Send message to current record using Odoo message_post XmlRpc when error"
      }
    ]
  }
]